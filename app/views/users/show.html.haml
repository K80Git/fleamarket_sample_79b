= render partial: "layouts/header"
.breadHeader
  - breadcrumb :mypage
  = breadcrumbs separator: " &rsaquo; "
.Wrapper
  .Link
    %h3.Link__page
    %ul.Link__item
      %li.Link__list
        = link_to "お気に入りの商品", product_favorites_path(:product_id)
      %h3.Link__page
        設定
      %ul.Link__item 
        %li.Link__list
          = link_to  edit_user_registration_path  do
            ニックネーム・メールアドレス変更
        %li.Link__list
          = link_to edit_names_path do
            登録名変更
        %li.Link__list
          = link_to edit_address_path  do
            発送元・お届け住所変更
        %li.Link__list
          = link_to destroy_user_session_path,method: :delete do
            ログアウト
        %li.Link__list
          = link_to "クレジットカード情報登録・確認・削除", "/card/new"
        %li.Link__list
          = link_to root_path do
            トップページ
  .MYPAGE
    .MYpageContents
      .MYpageHeader
        .MYpageHeader__title
          出品済アイテム一覧
        - if @products.empty?
          .NOmypage
            出品したアイテムはありません。
        - else
          .MYpageHeader__more
            = link_to "もっと見る >", newlook_path
          .MYroomBox
            .MYroomLists
              .MYroomList
                - @products.each do |product|
                  = link_to product do
                    .MYroomList--img
                      = image_tag product.images.first.src.url
                    -if product.soldout == 1
                      .soldout
                        .soldout__inner SOLD
                    .MYroomList--body
                      %h3.name
                        = product.name
                      .details
                        %ul
                          %li
                            = product.price
                            円
                          %li
                            = icon('fas', 'star', class:'likeIcon')
                            0
                        %p
                          (税込)                
    .MYpageContents
      .MYpageHeader
        .MYpageHeader__title
          購入済アイテム一覧
        - if @products.empty?
          .NOmypage
            購入済のアイテムはありません。
        - else
          .MYpageHeader__more
            = link_to "もっと見る >", newlook_path
          .MYroomBox
            .MYroomLists
              .MYroomList
                - @productsB.each do |product|
                  = link_to product do
