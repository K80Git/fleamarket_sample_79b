                    .MYroomList--body
                      %h3.name
                        = product.name
                      .details
                        %ul
                          %li
                            = product.price
                            円
                          %li
                            = icon('fas', 'star', class:'likeIcon')
                            0
                        %p
                          (税込)

 
  
